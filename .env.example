# cheeseshirt environment configuration
# Copy this to .env and fill in your values

# ============================================
# OPENAI (required)
# ============================================
OPENAI_API_KEY=sk-xxx
OPENAI_MODEL=gpt-4o
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# ============================================
# STRIPE (required)
# Get these from https://dashboard.stripe.com/apikeys
# ============================================
STRIPE_SECRET_KEY=sk_test_xxx
STRIPE_PUBLISHABLE_KEY=pk_test_xxx

# Webhook secret - get from https://dashboard.stripe.com/webhooks
# (optional, but recommended for production)
STRIPE_WEBHOOK_SECRET=whsec_xxx

# ============================================
# PRODUCT
# ============================================
# Shirt price in cents (3500 = $35.00)
SHIRT_PRICE_CENTS=3500

# Your site URL (for receipts and metadata)
SITE_URL=https://cheeseshirt.com

# ============================================
# API SERVER
# ============================================
PORT=3001
HOST=0.0.0.0

# Database path (SQLite)
DATABASE_PATH=./data/cheeseshirt.db


# log path
LOG_PATH=~/logs

# Set to true if running behind HTTPS
COOKIE_SECURE=false

# Hours before a "time waster" can return
TIME_WASTER_THRESHOLD_HOURS=24

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Log file path (leave empty for console only)
# LOG_PATH=/app/logs/cheeseshirt-api.log

# ============================================
# STRIPE WORKER
# ============================================
# How often the worker polls Stripe for new orders (seconds)
POLL_INTERVAL_SECONDS=300
